{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "preserve",
		"moduleResolution": "Node",
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"sourceMap": false,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@@/*": ["electron/*"]
		},
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"electron/**/*.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
